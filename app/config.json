{
    "mode": "google",

    "local": {
        "llm_api_url": "http://stepuntu:11434",
        "llm_model": "gemma-3-27b-it",
        "tts_api_url": "http://localhost:8000/v1/audio/speech",
        "tts_voice": "default",
        "tts_options": {
            "response_format": "mp3",
            "speed": 1,
            "stream_format": "audio",
            "exaggeration": 0.25,
            "cfg_weight": 1,
            "temperature": 0.05,
            "streaming_chunk_size": 50,
            "streaming_strategy": "paragraph",
            "streaming_buffer_size": 1,
            "streaming_quality": "balanced"
        }
    },

    "google": {
        "llm_model": "gemini-2.0-flash",
        "tts_voice": "en-US-Neural2-D",
        "tts_language_code": "en-US",
        "tts_options": {
            "response_format": "wav"
        }
    },

    "prompt_file": "prompt.txt",
    "save_session": false,
    "play_audio": true,
    "buffer_audio": true
}
